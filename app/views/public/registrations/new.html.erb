<h4>新規会員登録</h4>
<%= form_with model: @customer, url: new_customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group">
    <label class="col-sm-4">名前</label>
    <div class="col-sm-4">(姓)<%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="col-sm-4">(名)<%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4">フリガナ</label>
    <div class="col-sm-4">(セイ)<%= f.text_field :last_name_kana, class: "form-control" %>
    </div>
    <div class="col-sm-4">(メイ)<%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4">メールアドレス</label>
    <div class="col-sm-4"><%= f.text_field :email, class: "form-control" %></div>
  </div>

  <div class="field">
    <h6>郵便番号(ハイフンなし)</h6>
    <%= f.number_field :postal_code %>
  </div>
  <div class="field">
    <h6>住所</h6>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <h6>電話番号(ハイフンなし)</h6>
    <%= f.telephone_field :phone %>
  </div>
  <div class="field">
    <h6>パスワード(6文字以上)</h6>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <h6></h6>
    <%= f.label :password_confirmation, "(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br />

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div><br />
<% end %>

<h6>既に登録済みの方</h6>
<%= link_to "こちら", new_customer_session_path %> からログインしてください。
