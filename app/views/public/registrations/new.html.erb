<h4>新規会員登録</h4>

<%= form_with model: resource, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="container">
    <div class="row">
      <label class="col-sm-3">名前</label>
      <label class="col-sm-1">(姓)</label>
      <div class="col-sm-4"><%= f.text_field :last_name %></div>
      <label class="col-sm-1">(名)</label>
      <div class="col-sm-3"><%= f.text_field :first_name %></div>
    </div>

    <div class="row">
      <label class="col-sm-3">フリガナ</label>
      <label class="col-sm-1">(セイ)</label>
      <div class="col-sm-4"><%= f.text_field :last_name_kana %></div>
      <label class="col-sm-1">(メイ)</label>
      <div class="col-sm-3"><%= f.text_field :first_name_kana %></div>
    </div>

    <div class="row">
      <label class="col-sm-4">メールアドレス</label>
      <div class="col-sm-8"><%= f.text_field :email %></div>
    </div>

    <div class="row">
      <label class="col-sm-4">郵便番号(ハイフンなし)</label>
      <div class="col-sm-8"><%= f.text_field :postal_code %></div>
    </div>

    <div class="row">
      <label class="col-sm-4">住所</label>
      <div class="col-sm-8"> <%= f.text_field :address, class: "col-sm-11" %></div>
    </div>

    <div class="row">
      <label class="col-sm-4">電話番号(ハイフンなし)</label>
      <div class="col-sm-8"> <%=f.text_field :telephone_number %></div>
    </div>

    <div class="row">
      <label class="col-sm-4">パスワード(6文字以上)</label>
      <div class="col-sm-8"> <%= f.text_field :password %></div>
    </div>

    <div class="row">
      <label class="col-sm-4">パスワード(確認用)</label>
      <div class="col-sm-8"> <%= f.text_field :password_confirmation, autocomplete: "new-password" %></div>
    </div><br />

    <div class="row">
      <%= f.submit '新規登録', class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<h6>既に登録済みの方</h6>
<%= link_to "こちら", new_customer_session_path %> からログインしてください。
